// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // "sqlite" // mariadb || mysql
  url      = env("DATABASE_URL")
}

model Student {
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  dni String
  roadtype String
  address String
  postalCode String
  city String
  telephone String
  birthDate DateTime
  sex String
}

model Subject {
  id Int @id @default(autoincrement())
  nameVLC String @unique
  nameCAS String @unique
  troncal Boolean
}