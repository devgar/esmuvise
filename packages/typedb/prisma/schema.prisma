// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // "sqlite" // mariadb || mysql
  url      = env("DATABASE_URL")
}

model Student {
  id         BigInt    @id @default(autoincrement()) @db.UnsignedBigInt
  firstName  String
  lastName   String
  dni        String    @default("")
  roadType   String    @default("")
  address    String    @default("")
  postalCode String    @default("")
  city       String    @default("")
  telephone  String    @default("")
  birthDate  DateTime?
  sex        String    @default("")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  enrollments Enrollment[]
}

model Subject {
  id      BigInt  @id @default(autoincrement()) @db.UnsignedBigInt
  nameVLC String  @unique
  nameCAS String  @unique
  troncal Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  enrollments Enrollment[]
}

model Enrollment {
  id     BigInt @id @default(autoincrement()) @db.UnsignedBigInt
  year   Int
  course Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  studentId BigInt  @db.UnsignedBigInt
  student   Student @relation(fields: [studentId], references: [id])
  subjectId BigInt  @db.UnsignedBigInt
  subject   Subject @relation(fields: [subjectId], references: [id])

  // @@unique([id, year, course, studentId, subjectId])
  @@unique([id, year, studentId, subjectId])
}
